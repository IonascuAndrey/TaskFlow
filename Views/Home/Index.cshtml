@{
    ViewData["Title"] = "TaskFlow";
}
    
<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-4 text-primary mb-3">Simplify your work!</h1>
            <p class="lead">TaskFlow gives you the complete solution for organizing and managing projects. Start collaborating effectively today!</p>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://img.freepik.com/free-vector/business-team-brainstorm-idea-lightbulb-from-jigsaw-working-team-collaboration-enterprise-cooperation-colleagues-mutual-assistance-concept-pinkish-coral-bluevector-isolated-illustration_335657-1651.jpg?t=st=1734115036~exp=1734118636~hmac=6ffd49227e0fedf76f12defc4296d90c9972283b110a013eb9993543c05a2c81&w=1800" alt="TaskFlow" class="img-fluid rounded">
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center text-primary mb-5">Ce oferim</h2>
    <div class="row text-center">
        <div class="col-md-3">
            <div class="p-3 border rounded shadow p-3 mb-5 bg-white rounded">
                <i class="bi bi-calendar-check text-success" style="font-size: 2rem;"></i>
                <h4>Organizare</h4>
                <p>Pastreaza proiectele structurate si echipa ta sincronizata.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 border rounded shadow p-3 mb-5 bg-white rounded">
                <i class="bi bi-pencil-square text-info" style="font-size: 2rem;"></i>
                <h4>Planificare</h4>
                <p>Seteaza obiective clare si stabileste prioritati.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 border rounded shadow p-3 mb-5 bg-white rounded">
                <i class="bi bi-graph-up-arrow text-warning" style="font-size: 2rem;"></i>
                <h4>Optimizare</h4>
                <p>Creste productivitatea și redu timpul pierdut.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 border rounded shadow p-3 mb-5 bg-white rounded">
                <i class="bi bi-bar-chart-steps text-danger" style="font-size: 2rem;"></i>
                <h4>Trackuire</h4>
                <p>Monitorizeaza progresul proiectelor în timp real.</p>
            </div>
        </div>
    </div>
</div>
